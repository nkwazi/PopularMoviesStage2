<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/trailer_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/trailer_rv"
        app:layout_constraintBottom_toBottomOf="@id/trailer_rv"
        android:src="@drawable/baseline_play_arrow_black_18dp"
        app:layout_constraintStart_toEndOf="@id/trailer_rv"/>

    <TextView
        android:id="@+id/trailer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/trailer_play_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/trailer_play_button"
        app:layout_constraintBottom_toBottomOf="@id/trailer_play_button"
        android:gravity="center"
        tool:text="Trailer"/>

    <ImageView
        android:id="@+id/trailer_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="2dp" />


</android.support.constraint.ConstraintLayout>